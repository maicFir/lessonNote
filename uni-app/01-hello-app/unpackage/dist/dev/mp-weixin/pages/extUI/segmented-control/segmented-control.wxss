.example-body {
  display: flex;
  flex-direction: row;
  padding: 0;
}
.uni-common-mt {
  margin-top: 30px;
}
.uni-padding-wrap {
  padding: 0px 30px;
}
.content {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 150px;
  text-align: center;
}
.content-text {
  font-size: 14px;
  color: #666;
}
.color-tag {
  width: 25px;
  height: 25px;
}
.uni-list {
  flex: 1;
}
.uni-list-item {
  display: flex;
  flex: 1;
  flex-direction: row;
  background-color: #FFFFFF;
}
.uni-list-item__container {
  padding: 12px 15px;
  width: 100%;
  flex: 1;
  position: relative;
  display: flex;
  box-sizing: border-box;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom-style: solid;
  border-bottom-width: 1px;
  border-bottom-color: #eee;
}
.uni-list-item__content-title {
  font-size: 14px;
}