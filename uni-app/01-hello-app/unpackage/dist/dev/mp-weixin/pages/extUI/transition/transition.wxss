.example {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 150px;
  background-color: #fff;
}
.example-body {
  padding: 10px 20px;
  padding-bottom: 0px;
}
.transition-button {
  width: 100%;
  flex: 1;
  margin-bottom: 10px;
}
.example .transition {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100px;
  height: 100px;
  border-radius: 5px;
  text-align: center;
  background-color: #4cd964;
  box-shadow: 0 0 5px 1px rgba(0, 0, 0, 0.2);
}
.text {
